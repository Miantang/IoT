// We don't need full layout here, because this page will be parsed with Ajax
// Top Navbar
.navbar
  .navbar-inner
    .left
      a(href="#").back.link 
        i.icon.icon-back
        span 返回
    .center.sliding 智能音箱
    .right
      a(href="#").link.icon-only.open-panel
        i.icon.icon-bars
.pages
  .page(data-page="volume")
    .page-content.volume-block
      .content-block.volume-background
        .volume-img-block(data-bind="click: $root.controllerChanged(12)")
          .row
            a#btn1.a-content-block-volume-icon.button.button-big.button-fill
              i#ico1.fa.fa-plus.color-white.content-block-icon
            a#btn2.a-content-block-volume-icon.button.button-big.button-fill
              i#ico2.fa.fa-step-backward.color-white.content-block-icon
            a#btn3.a-content-block-volume-icon.button.button-big.button-fill
              i#ico3.fa.fa-play.color-white.content-block-icon
            a#btn4.a-content-block-volume-icon.button.button-big.button-fill
              i#ico4.fa.fa-step-forward.color-white.content-block-icon
            a#btn5.a-content-block-volume-icon.button.button-big.button-fill
              i#ico5.fa.fa-minus.color-white.content-block-icon


